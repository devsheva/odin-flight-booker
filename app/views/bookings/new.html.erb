<%= form_with model: @booking, local: true do |f| %>
  <% i = 1 %>
  <%= f.fields_for :passengers do |p| %>
    <%= "Passenger #{i}" %> <br>

    <%= f.label "Name" %>
    <%= p.text_field :name %> <br>

    <%= f.label "Email" %>
    <%= p.text_field :email %> <br>

    <% i += 1 %>
  <% end %>

  <%= f.hidden_field :flight_id, value: params[:flight] %>

  <%= f.submit "Purchase Ticket" %>
<% end %>